{
  "name": "load-available-actions",
  "version": "0.0.1",
  "private": false,
  "description": "GitHub Action to load all available actions for an organization or user",
  "main": "dist/main.js",
  "scripts": {
    "esbuild": "esbuild src/main.ts --bundle --outdir=dist --platform=node --external:vscode --external:@vscode/test-electron --external:jest",
    "build": "npm run esbuild",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "npm run esbuild",
    "test": "jest",
    "all": "npm run esbuild && npm run test # && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajbos/github-action-load-available-actions.git"
  },
  "keywords": [
    "GitHub Actions",
    "load available actions from GitHub organization"
  ],
  "author": "@rajbos",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "octokit": "^4.1.3",
    "string-sanitizer": "^2.0.2",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@typescript-eslint/parser": "^8.35.1",
    "@vercel/ncc": "^0.38.3",
    "ansi-regex": ">=6.1.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^28.12.0",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "3.6.2",
    "tmpl": ">=1.0.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  }
}
