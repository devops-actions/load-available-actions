{
  "name": "load-available-actions",
  "version": "0.0.1",
  "private": false,
  "description": "GitHub Action to load all available actions for an organization or user",
  "main": "dist/main.js",
  "scripts": {
    "esbuild": "esbuild src/main.ts --bundle --outdir=dist --platform=node --external:vscode --external:@vscode/test-electron --external:jest",
    "build": "npm run esbuild",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "npm run esbuild",
    "test": "jest",
    "all": "npm run esbuild && npm run test # && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajbos/github-action-load-available-actions.git"
  },
  "keywords": [
    "GitHub Actions",
    "load available actions from GitHub organization"
  ],
  "author": "@rajbos",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "moment": "^2.29.4",
    "octokit": "^2.0.14",
    "string-sanitizer": "^2.0.2",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.57.0",
    "@vercel/ncc": "^0.36.1",
    "ansi-regex": ">=5.0.1",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.14",
    "eslint": "^8.37.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.7",
    "tmpl": ">=1.0.5",
    "ts-jest": "^27.1.4",
    "typescript": "^4.9.5"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
